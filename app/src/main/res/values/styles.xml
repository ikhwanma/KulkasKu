<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextKulkasKu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextKulkasKu.TitleItem">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextKulkasKu.TitleItem.Nama">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextKulkasKu.TitleItem.Harga">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextKulkasKu.TaglineItem">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextKulkasKu.Detail">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextKulkasKu.Detail.Normal">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="TextKulkasKu.Detail.Bold">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="TextKulkasKu.Detail.BoldNoMargin">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextKulkasKu.About">
        <item name="android:textSize">25sp</item>
    </style>
    <style name="TextKulkasKu.About.Name">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>
    <style name="TextKulkasKu.About.Email">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>